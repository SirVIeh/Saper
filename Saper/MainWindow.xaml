<Window x:Class="Saper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:saper="clr-namespace:Saper"
        Title="MainWindow" Height="900" Width="900" Background="DarkGray">
<Window.DataContext>
    <saper:MainWindowViewModel/>
</Window.DataContext>
    
    <Grid>
        <DockPanel Height="20" VerticalAlignment="Top">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_New Game" Command="{Binding StartGame}"></MenuItem>
                <MenuItem Header="_Difficult Level">
                    <MenuItem Header="_Easy" Command="{Binding SetDifficulty}"></MenuItem>
                    <MenuItem Header="_Medium" Command="{Binding SetDifficulty}"></MenuItem>
                    <MenuItem Header="_Hard" Command="{Binding SetDifficulty}"></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid Name="MainGrid" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="800" Width="800" Margin="0,0,0,30"></Grid>
    </Grid>
</Window>
